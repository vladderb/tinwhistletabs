<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="500dp"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title *"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/dialog_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter song title (or paste ABC with T: header)"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/dialog_author_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter author name (optional)"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/dialog_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC Notation *"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/dialog_abc_input"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Paste ABC notation here&#10;Example:&#10;X:1&#10;T:My Song&#10;M:4/4&#10;L:1/8&#10;K:D&#10;DEFG ABAG|"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:scrollbars="vertical"
            android:imeOptions="actionDone"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Required fields&#10;Tip: Swipe back to close keyboard and access Save button"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
